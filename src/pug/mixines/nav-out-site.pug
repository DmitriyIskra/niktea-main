mixin nav-out-site(points)
    .nav-out-outsite
        .nav-out-wrapper
            .nav-out__wr-title 
                a.nav-out__title(href="#0")
                    span niktea 
                    span Family
            .nav-out__wr-nav
                .nav-out__triangle
                ul.nav-out__list
                    each item in points
                        li.nav-out__item
                            a(href=item.link title=item.title + " Niktea Family")  #{item.title}
                            .nav-out__line-anim